{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "transformed",
    "experimentalDecorators": true,
    "declaration": false,
    "declarationMap": false,
    "target": "es5",
    "lib": ["es6"],
    "plugins": [
      {
        "transform": "../../src",
        "before": true
      },
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
