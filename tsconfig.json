{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
     "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [],
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ]
}
